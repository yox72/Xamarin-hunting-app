<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ComHunt.Views.TestBDPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" Margin="20">
            <Button Text="Chevreuil Vue" Command ="{Binding chevreuilVueCommand}"/>
            <Button Text="Renard Vue" Command ="{Binding renardVueCommand}"/>
            <Button Text="Sanglier Vue" Command ="{Binding sanglierVueCommand}"/>
            <Button Text="Chevreuil Tué" Command ="{Binding chevreuilTuerCommand}"/>
            <Button Text="Renard Tué" Command ="{Binding renardTuerCommand}"/>
            <Button Text="Sanglier Tué" Command ="{Binding sanglierTuerCommand}"/>
            <Button Text="Get !" Clicked = "Handle_Clicked"/>
            <ListView ItemsSource="{Binding .}" x:Name="_lst">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="Sanglier" Detail="{Binding Sanglier}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>
